        "data_redaction"
      ],
      "deny": []
    },
    "S-I": {
      "name": "System Inbound",
      "direction": "system_to_agent",
      "allow": [
        "data_ingestion"
      ],
      "controls": [
        "input_validation",
        "security_checks"
      ],
      "deny": []
    },
    "S-O": {
      "name": "System Outbound",
      "direction": "agent_to_system",
      "allow": [
        "data_export"
      ],
      "controls": [
        "output_validation",
        "security_checks"
      ],
      "deny": []
