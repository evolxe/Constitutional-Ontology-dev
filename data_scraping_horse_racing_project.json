  "dials": {
    "autonomy": {
      "level": "L2",
      "label": "Moderate Autonomy",
      "description": "Limited autonomy to ensure adherence to engineering best practices."
    },
    "personalization": {
      "level": "L1",
      "label": "Minimal Personalization",
      "description": "Minimal personalization to maintain focus on engineering objectives."
    },
    "memory": {
      "level": "L2",
      "label": "Moderate Memory Use",
      "description": "Moderate memory use to support data processing requirements."
    },
    "inter_agent": {
      "level": "L1",
      "label": "Minimal Inter-Agent Communication",
      "description": "Minimal communication between agents to maintain project focus."
    }
  },
  "gates": {
