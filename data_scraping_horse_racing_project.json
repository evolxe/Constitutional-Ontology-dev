    "M-I": {
      "name": "Memory Inbound",
      "direction": "memory_to_agent",
      "allow": [
        "data_retrieval"
      ],
      "controls": [
        "access_logging"
      ],
      "deny": []
    },
    "M-O": {
      "name": "Memory Outbound",
      "direction": "agent_to_memory",
      "allow": [
        "data_storage"
      ],
      "controls": [
        "retention_policy"
      ],
      "deny": []
    },
    "A-I": {
      "name": "Agent Inbound",
      "direction": "other_agent_to_agent",
      "allow": [
        "collaboration_requests"
      ],
      "controls": [
        "agent_authentication"
      ],
      "deny": []
    },
    "A-O": {
      "name": "Agent Outbound",
      "direction": "agent_to_other_agent",
      "allow": [
        "collaboration_data"
      ],
      "controls": [
        "data_encryption"
      ],
      "deny": []
    }
  },
  "overlays_enabled": [],
